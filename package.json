{
  "name": "@penguintechinc/penguin-libs",
  "version": "1.0.0",
  "private": true,
  "description": "Penguin Tech shared libraries for all languages (React/JS, Python, Go)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:react-libs": "npm run build -w @penguintechinc/react-libs",
    "build:react-aaa": "npm run build -w @penguintechinc/react-aaa",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "publish:react-libs": "npm publish -w @penguintechinc/react-libs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penguintechinc/penguin-libs.git"
  },
  "author": "Penguin Tech Inc <dev@penguintech.io>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/penguintechinc/penguin-libs/issues"
  },
  "homepage": "https://github.com/penguintechinc/penguin-libs#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
