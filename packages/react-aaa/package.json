  "homepage": "https://www.penguintech.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penguintechinc/penguin-libs.git",
    "directory": "packages/react-aaa"
  },
  "bugs": {
    "url": "https://github.com/penguintechinc/penguin-libs/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "dependencies": {
    "jose": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jsdom": "^28.0.0",
    "react": "*",
    "react-dom": "*",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
