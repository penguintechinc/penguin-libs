{
  "name": "@penguintechinc/react-aaa",
  "version": "0.1.0",
  "description": "Authentication, Authorization, and Audit library for React applications - OIDC, RBAC, and audit logging",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "authentication",
    "authorization",
    "audit",
    "oidc",
    "rbac",
    "typescript",
    "penguintech"
